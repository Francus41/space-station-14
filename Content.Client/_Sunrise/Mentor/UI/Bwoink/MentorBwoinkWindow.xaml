<?xml version="1.0" encoding="utf-8" ?>
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="Content.Client._Sunrise.Mentor.UI.Bwoink.MentorBwoinkWindow"
        Title="Mentor Help"
        MinWidth="400"
        MinHeight="300">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="5">
            <Button Name="SendButton" Content="Send" Margin="0,0,5,0" />
            <Button Name="CloseButton" Content="Close" />
        </StackPanel>
        <TextBox Name="MessageInput" DockPanel.Dock="Bottom" Margin="5" AcceptsReturn="True" />
        <ScrollViewer>
            <TextBox Name="MessageHistory" IsReadOnly="True" TextWrapping="Wrap" />
        </ScrollViewer>
    </DockPanel>
</Window> 