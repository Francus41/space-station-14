<?xml version="1.0" encoding="utf-8" ?>
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Content.Client._Sunrise.Mentor.UI.MhelpControl">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBox Name="TitleInput" PlaceholderText="Title" Margin="2" />
        <TextBox Name="DescriptionInput" Grid.Row="1" PlaceholderText="Description" AcceptsReturn="True" TextWrapping="Wrap" Margin="2" />
        <Button Name="SubmitButton" Grid.Row="2" Content="Submit" Margin="2" />
    </Grid>
</UserControl> 